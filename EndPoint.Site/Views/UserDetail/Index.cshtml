@using Practice_Store.Application.Services.Users.Queries.GetUserDetail_Site
@model GetUserDetail_SiteDto;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="space">
    <div class="container">
        <div class="row mb-5">
            <div class="col-xl-6"><div class="about-card-img"><img src="~/images/4213460-account-avatar-head-person-profile-user_115386.png" alt="team image"></div></div>
            <div class="col-xl-6">
                <div class="about-card">
                    <h2 class="about-card_title">@(Model.Name + " " + Model.LastName)</h2>
                    <p class="about-card_desig">کاربر</p>
                    <div class="team-info">
                        <ul>
                            <li>
                                <b>شماره تلفن:</b><a href="tel:+16325643654">@Model.Mobile</a>
                            </li>
                            <li>
                                <b>پست الکترونیک:</b><a href="mailto:alhandorobert@gmail.com">@Model.Email</a>
                            </li>
                            <li>
                                <b>نشانی:</b><span>@Model.Address</span>
                            </li>
                            <li>
                                <b>کد پستی:</b><span>@Model.PostCode</span>
                            </li>
                        </ul>
                    </div>
                </div>
                <br>
                <div class="accordion mt-40" id="faqAccordion">
                    <div class="accordion-card">
                        <div class="accordion-header" id="collapse-item-1">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-1" aria-expanded="false" aria-controls="collapse-1">پیگیری سفارشات</button>
                        </div>
                    <div id="collapse-1" class="accordion-collapse collapse" aria-labelledby="collapse-item-1" data-bs-parent="#faqAccordion" style=""><div class="accordion-body"><a href="/UserDetail/GetOrders?UserId=@Model.Id">مشاهده سفارشات</a></div></div>
                    </div>
                    <div class="accordion-card">
                        <div class="accordion-header" id="collapse-item-2">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-2" aria-expanded="false" aria-controls="collapse-2">تغییر رمز عبور</button>
                        </div>
                        <div id="collapse-2" class="accordion-collapse collapse" aria-labelledby="collapse-item-2" data-bs-parent="#faqAccordion" style=""><div class="accordion-body"><a href="/UserDetail/ChangeUserPassword">برای تغییر رمز عبور خود کلیک کنید</a></div></div>
                    </div>
                    <div class="accordion-card">
                        <div class="accordion-header" id="collapse-item-3">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-3" aria-expanded="false" aria-controls="collapse-3">تغییر ایمیل</button>
                        </div>
                        <div id="collapse-3" class="accordion-collapse collapse" aria-labelledby="collapse-item-3" data-bs-parent="#faqAccordion" style=""><div class="accordion-body"><a href="/UserDetail/ChangeUserEmail">برای تغییر ایمیل خود کلیک کنید</a></div></div>
                    </div>
                </div>
                <br />
                <a class="th-btn" href="/Userdetail/EditUserdetail">ویرایش حساب کاربری</a>
                <a class="th-btn style4" href="/Register/LogOut">خروج از حساب کاربری</a>
            </div>
        </div>
    </div>
</section>

@section Scripts{

}