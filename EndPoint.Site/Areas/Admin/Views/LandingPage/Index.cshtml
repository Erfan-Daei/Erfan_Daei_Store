@using Practice_Store.Application.Services.LandingPage.Queries.GetImages_Site;
@using Practice_Store.Domain.Entities.LandingPage;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<GetImages_SiteDto>;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<section>
@if (Model.Count != 0)
{
    <div class="table-responsive">
        <table class="table table-sm mb-0 table-striped">
            <thead>
                <tr>
                    <th>تصویر</th>
                    <th>عنوان</th>
                    <th>لینک</th>
                    <th>محل نمایش</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="customers">
                @foreach (var item in Model)
                {
                    <tr class="btn-reveal-trigger">
                        <td class="py-3">
                            <a href="#">
                                <div class="media d-flex align-items-center">
                                    <div class="avatar avatar-xl me-2"><div class=""><img class="rounded-circle img-fluid" src="~/@item.Src" width="30" alt=""></div></div>
                                </div>
                            </a>
                        </td>
                        <td class="py-2">@item.Title</td>
                        <td class="py-2 ps-5">@item.Link</td>
                        <td class="py-2">@item.ImageLocation</td>
                        <td class="py-2 text-end">
                            <div class="dropdown">
                                <button class="btn btn-primary tp-btn-light sharp" type="button" data-bs-toggle="dropdown"><span class="fs--1"><svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="18px" height="18px" viewBox="0 0 24 24" version="1.1"><g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd"><rect x="0" y="0" width="24" height="24"></rect><circle fill="#000000" cx="5" cy="12" r="2"></circle><circle fill="#000000" cx="12" cy="12" r="2"></circle><circle fill="#000000" cx="19" cy="12" r="2"></circle></g></svg></span></button><div class="dropdown-menu dropdown-menu-end border py-0">
                                    <div class="py-2">
                                        <button class="dropdown-item" onclick="ShowEditImagerModalFunc('@item.Id', '@item.Title', '@item.Link')">
                                            ویرایش
                                        </button>
                                        <button class="dropdown-item text-danger" onclick="DeleteImageFunc('@item.Id')">حذف</button>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
</section>

@section Scripts{
    <link href="~/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/sweetalert2/sweetalert2.min.js"></script>

    <script>
        function DeleteImageFunc(Id) {
            swal.fire({
                title: 'حذف تصویر',
                text: "کاربر گرامی از حذف تصویر مطمئن هستید؟",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#7cacbe',
                confirmButtonText: 'بله ، تصویر حذف شود',
                cancelButtonText: 'خیر'
            }).then((result) => {
                if (result.value) {
                    var postData = {
                        'Id': Id,
                    };
                    $.ajax({
                        contentType: 'application/x-www-form-urlencoded',
                        dataType: 'json',
                        type: "DELETE",
                        url: "DeleteLandingPageImage",
                        data: postData,
                        success: function (data) {
                            if (data.isSuccess == true) {
                                swal.fire(
                                    'موفق!',
                                    data.message,
                                    'success'
                                ).then(function (isConfirm) {
                                    location.reload();
                                });
                            }
                            else {
                                swal.fire(
                                    'هشدار!',
                                    data.message,
                                    'warning'
                                );
                            }
                        },
                        error: function (request, status, error) {
                            alert(request.responseText);
                        }
                    });
                }
            })
        }

        function EditImageFunc() {
            var datas = new FormData();
            datas.append("Id", $("#Edit_ImageId").val());
            datas.append("Title", $("#Edit_Title").val());
            datas.append("Link", $("#Edit_Link").val());
         //   datas.append("ImageLocation", $("#ImageLocation").val());
            datas.append("ImageLocation", $('#Edit_ImageLocation').find('option:selected').val());

            var productImages = document.getElementById("Edit_Image");
            if (productImages.files.length > 0) {
                for (var i = 0; i < productImages.files.length; i++) {
                    datas.append('Images-' + i, productImages.files[i]);
                }
            }
            $.ajax({
                contentType: false,
                processData: false,
                dataType: 'json',
                type: "PUT",
                url: "EditLandingPageImage",
                data: datas,
                success: function (data) {
                    if (data.isSuccess == true) {
                        swal.fire(
                            'موفق!',
                            data.message,
                            'success'
                        ).then(function (isConfirm) {
                            location.reload();
                        });
                    }
                    else {
                        swal.fire(
                            'هشدار!',
                            data.message,
                            'warning'
                        );
                    }
                },
                error: function (request, status, error) {
                    alert(request.responseText);
                }
            });
        }

        function ShowEditImagerModalFunc(Id, Title, Link) {
            $('#Edit_ImageId').val(Id)
            $('#Edit_Title').val(Title)
            $('#Edit_Link').val(Link)
            $('#EditImage').modal('show');
        }

        function CloseEditImageModalFunc() {
            $('#EditImage').modal('hide');
        }
    </script>
}
@section Modals{
    <div class="modal fade" id="EditImage" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">ویرایش تصویر</h5>
                </div>
                <div class="modal-body">
                    <div class="col-xl-12 col-lg-12 col-md-12 mb-1">
                        <fieldset class="form-group">
                            <input type="hidden" id="Edit_ImageId" />
                            <label for="basicInput">عنوان</label>
                            <input type="text" class="form-control" id="Edit_Title">
                            <label for="basicInput">لینک</label>
                            <input type="text" class="form-control" id="Edit_Link">
                            <label for="basicInput">تصویر</label>
                            <input type="file" multiple class="form-control" accept="image/*" id="Edit_Image">
                            <label for="basicInput">نقش کاربر</label>
                            <select class="default-select form-control wide w-100" id="Edit_ImageLocation" name="ImageLocation" asp-items="@Html.GetEnumSelectList<LandingPageImageLocation>()"></select>
                        </fieldset>
                    </div>
                </div>
                <div class="modal-footer">
                    <a class="btn btn-secondary" onclick="CloseEditImageModalFunc()">انصراف</a>
                    <a class="btn btn-primary" onclick="EditImageFunc()">اعمال تغییرات</a>
                </div>
            </div>
        </div>
    </div>
}
