@using Practice_Store.Application.Services.Users.Queries.GetAdminDetail
@model GetAdminDetailDto
@{
    ViewData["Title"] = "EditAdmindetail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section>
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-8 order-lg-1">
                                <h4 class="mb-3">مشخصات</h4>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="basicInput" class="form-label">نام</label>
                                        <input type="text" class="form-control" id="Name" value="@Model.Name" placeholder="نام">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="lastName" class="form-label">نام خانوادگی</label>
                                        <input type="text" class="form-control" id="LastName" value="@Model.LastName" placeholder="نام خانوادگی">
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="email" class="form-label">پست الکترونیک*</label>
                                    <input type="email" class="form-control" id="Email" value="@Model.Email" disabled>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="address" class="form-label">آدرس</label>
                                        <input type="text" class="form-control" id="Address" value="@Model.Address" placeholder="آدرس">
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="address" class="form-label">کد پستی</label>
                                        <input type="text" class="form-control" id="PostCode" value="@Model.PostCode" placeholder="کد پستی">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="Mobile" class="form-label">تلفن</label>
                                        <input type="text" class="form-control" id="Mobile" value="@Model.Mobile" placeholder="تلفن">
                                    </div>
                                </div>
                                <hr class="mb-6">
                                <a onclick="EditAdminDetailFunc()" class="btn btn-primary btn-lg btn-block">ثبت اطلاعات</a>
                            </div>
                        </div
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <link href="~/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/sweetalert2/sweetalert2.min.js"></script>

    <script>
        function EditAdminDetailFunc(){

                    var Name = $("#Name").val();
                    var LastName = $("#LastName").val();
                    var Mobile = $("#Mobile").val();
                    var Address = $("#Address").val();
                    var PostCode = $("#PostCode").val();
                    var UserId = '@Model.Id';

                    var postData = {
                        'UserId': UserId,
                        'Name': Name,
                        'LastName': LastName,
                        'PhoneNumber': Mobile,
                        'PostCode': PostCode,
                        'Address': Address,
                    };
                    $.ajax({
                        contentType: 'application/x-www-form-urlencoded',
                        dataType: 'json',
                        type: "PUT",
                        url: "/admin/admin/EditAdmindetail",
                        data: postData,
                        success: function (data) {
                            if (data.isSuccess == true) {
                                window.location.href = '/admin/admin';
                            }
                            else {
                                swal.fire(
                                    'هشدار!',
                                    data.message,
                                    'warning'
                                );
                            }
                        },
                        error: function (request, status, error) {
                            alert(request.responseText);
                        }
                    });
        }
    </script>
}

@section Modals {

}

