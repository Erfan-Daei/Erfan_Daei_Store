@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="basic-elements">
    <div class="container-fluid">
        <div class="row page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active"><a href="javascript:void(0)">مدیریت محصولات</a></li>
                <li class="breadcrumb-item"><a href="javascript:void(0)">افزودن محصول</a></li>
            </ol>
        </div>
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-8 order-lg-1">
                                <h4 class="mb-3">مشخصات</h4>
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label for="basicInput" class="form-label">نام محصول</label>
                                        <input type="text" class="form-control" id="Name">
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="lastName" class="form-label">نام برند</label>
                                        <input type="text" class="form-control" id="Brand">
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="address" class="form-label">قیمت (ریال)</label>
                                        <input type="text" class="form-control" id="Price">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label for="basicInput" class="form-label">درصد تخفیف</label>
                                        <input type="number" class="form-control" id="Off">
                                    </div>
                                </div>
                                <hr class="mb-4" />
                                <div class="form-check custom-checkbox mb-2">
                                    <input type="checkbox" class="form-check-input" id="Displayed">
                                    <label class="form-check-label" for="Displayed">آیا میخواهید که این محصول نمایش داده شود؟</label>
                                </div>
                                <hr class="mb-4" />
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">تصاویر </label>
                                        <input type="file" multiple class="form-control" accept="image/*" id="Images">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">دسته بندی</label>
                                        <select class="default-select form-control wide w-100" id="Category" asp-items="@ViewBag.Categories"></select>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">توضیحات</label>
                                        <textarea id="Description" class="form-control " rows="5"></textarea>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3 mb-3">
                                        <label for="basicInput" class="form-label">نام سایز</label>
                                        <input type="text" class="form-control" id="Size">
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label for="lastName" class="form-label">مقدار موجودی</label>
                                        <input type="text" class="form-control" id="Inventory">
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <hr class="col-md-8" />
                                        <a class="btn btn-sm btn-rounded btn-primary" id="btn_AddSizes">
                                            <span class="btn-icon-start text-primary">
                                                <i class="fa fa-plus color-primary"></i>
                                            </span>
                                            افزودن</a>
                                    </div>
                                </div>
                                <hr class="mb-2" />
                                <div class="table-responsive">
                                    <label for="table-responsive" class="form-label">جدول سایزها</label>
                                    <table class="table table-sm mb-0 table-striped" id="tbl_Sizes">
                                        <thead>
                                            <tr>
                                                <th>نام سایز</th>
                                                <th>تعداد موجودی</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                                </div>
                                <hr class="mb-6">
                                <button class="btn btn-primary btn-lg btn-block" id="btn_AddProduct">ثبت محصول</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <link href="~/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/sweetalert2/sweetalert2.min.js"></script>

    <script>

        $("#btn_AddSizes").on('click', function() {
            var Size = $("#Size").val();
            var Inventory = $("#Inventory").val();
            var InventoryPattern = /^\d+$/;
            if (Size == "" || Inventory == ""){
                swal.fire(
                    'هشدار',
                    "لطفا سایز و موجودی را وارد کنید",
                    'warning'
                );
            } else if (!InventoryPattern.test(Inventory)) {
                swal.fire(
                    'هشدار',
                    "موجودی نمیتواند از حروف تشکیل شود",
                    'warning'
                );
            } else {
                $('#tbl_Sizes tbody').append('<tr> <td>' + Size + '</td> <td>' + Inventory + '</td> <td> <a class="idSizes btn btn-danger">حذف</a> </td> </tr>');
                $("#Size").val('');
                $("#Inventory").val('');
            }
        });

        $("#tbl_Sizes").on('click', '.idSizes', function () {
            $(this).closest('tr').remove();
        });

        $("#btn_AddProduct").on('click', function() {

            var datas = new FormData();
            datas.append("Name", $("#Name").val());
            datas.append("Brand", $("#Brand").val());
            datas.append("Price", $("#Price").val());
            datas.append("Displayed", $("#Displayed").is(":checked") ? true : false);
            datas.append("CategoryId", $('#Category').find('option:selected').val());
            datas.append("Description", $("#Description").val());
            datas.append("OffPercentage", $("#Off").val());

            var productImages = document.getElementById("Images");
            if (productImages.files.length > 0) {
                for (var i = 0; i < productImages.files.length; i++) {
                    datas.append('Images-' + i, productImages.files[i]);
                }
            }

            var dataFeaturesViewModel = $('#tbl_Sizes tr:gt(0)').map(function () {
                return {
                    Size: $(this.cells[0]).text(),
                    Inventory: $(this.cells[1]).text(),
                };
            }).get();
            $.each(dataFeaturesViewModel, function (i, val) {
                datas.append('[' + i + '].Size', val.Size);
                datas.append('[' + i + '].Inventory', val.Inventory);
            });
            $.ajax({
                contentType: false,
                processData: false,
                        dataType: 'json',
                        type: "POST",
                        url: "AddProduct",
                        data: datas,
                        success: function (data) {
                            if (data.isSuccess == true) {
                                swal.fire(
                                    'موفق!',
                                    data.message,
                                    'success'
                                ).then(function (isConfirm) {
                                    location.reload();
                                });
                            }
                            else {
                                swal.fire(
                                    'هشدار!',
                                    data.message,
                                    'warning'
                                );
                            }
                        },
                        error: function (request, status, error) {
                            alert(request.responseText);
                        }
                    });
        });
    </script>
}
@section Modals {
}

