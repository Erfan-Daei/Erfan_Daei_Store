@using Practice_Store.Application.Services.Products.Queries.GetProductDetails_Admin
@model GetProductDetail_AdminDto;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "EditProduct";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<section class="basic-elements">
    <div class="container-fluid">
        <div class="row page-titles">
            <ol class="breadcrumb">
                <li class="breadcrumb-item active"><a href="javascript:void(0)">مدیریت محصولات</a></li>
                <li class="breadcrumb-item"><a href="javascript:void(0)">افزودن محصول</a></li>
            </ol>
        </div>
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-8 order-lg-1">
                                <h4 class="mb-3">مشخصات</h4>
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label for="basicInput" class="form-label">نام محصول</label>
                                        <input type="text" class="form-control" id="Name" value="@Model.Name">
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="lastName" class="form-label">نام برند</label>
                                        <input type="text" class="form-control" id="Brand" value="@Model.Brand">
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label for="address" class="form-label">قیمت (ریال)</label>
                                        <input type="text" class="form-control" id="Price" value="@Model.Price">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label for="basicInput" class="form-label">درصد تخفیف</label>
                                        <input type="number" class="form-control" id="Off" value="@Model.OffPercentage">
                                    </div>
                                </div>
                                <hr class="mb-4" />
                                <div class="form-check custom-checkbox mb-2">
                                    @if(Model.Displayed == "نمایش"){
                                        <input type="checkbox" class="form-check-input" id="Displayed" checked="checked">
                                    }else{
                                        <input type="checkbox" class="form-check-input" id="Displayed">
                                    }
                                    <label class="form-check-label" for="Displayed">آیا میخواهید که این محصول نمایش داده شود؟</label>
                                </div>
                                <hr class="mb-4" />
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">تصاویر </label>
                                        <input type="file" multiple class="form-control" accept="image/*" id="Images">
                                    </div>
                                </div>
                                <hr class="mb-2" />
                                <div class="table-responsive">
                                    <label for="table-responsive" class="form-label">جدول تصاویر</label>
                                    <table class="table table-sm mb-0 table-striped" id="tbl_Images">
                                        <thead>
                                            <tr>
                                                <th>تصویر</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Images)
                                            {
                                                <tr>
                                                    <td>
                                                        <a href="#first" role="tab" data-bs-toggle="tab"><img class="img-fluid" src="~/@item.Src" alt="" width="50"></a>
                                                    </td>
                                                    <td><a class="idImages btn btn-danger">حذف</a></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <hr class="mb-2" />
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">دسته بندی</label>
                                        <select class="default-select form-control wide w-100" id="Category" asp-items="@ViewBag.EditCategories"></select>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="form-label">توضیحات</label>
                                        <textarea id="Description" class="form-control " rows="5">@Model.Description</textarea>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-3 mb-3">
                                        <label for="basicInput" class="form-label">نام سایز</label>
                                        <input type="text" class="form-control" id="Size">
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <label for="lastName" class="form-label">مقدار موجودی</label>
                                        <input type="text" class="form-control" id="Inventory">
                                    </div>
                                    <div class="col-md-3 mb-3">
                                        <hr class="col-md-8" />
                                        <a class="btn btn-sm btn-rounded btn-primary" id="btn_AddSizes">
                                            <span class="btn-icon-start text-primary">
                                                <i class="fa fa-plus color-primary"></i>
                                            </span>
                                            افزودن
                                        </a>
                                    </div>
                                </div>
                                <hr class="mb-2" />
                                <div class="table-responsive">
                                    <label for="table-responsive" class="form-label">جدول سایزها</label>
                                    <table class="table table-sm mb-0 table-striped" id="tbl_Sizes">
                                        <thead>
                                            <tr>
                                                <th>نام سایز</th>
                                                <th>تعداد موجودی</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Sizes){
                                                <tr>
                                                    <td>@item.SizeName</td>
                                                    <td>@item.Inventory</td>
                                                    <td><a class="idSizes btn btn-danger">حذف</a></td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <hr class="mb-6">
                                <button class="btn btn-primary btn-lg btn-block" id="btn_EditProduct">ویرایش محصول</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <link href="~/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/sweetalert2/sweetalert2.min.js"></script>

    <script>

        $("#Images").on('change', function() {
        var InputCounter = 0;
        var productImages = document.getElementById("Images");
            if (productImages.files.length > 0) {
                for (var i = 0; i < productImages.files.length; i++) {
                    var file = productImages.files[i];
                    var reader = new FileReader();
                    reader.onload = (function(file, InputCounter){
                        return function (e){
                            var newRow = $('<tr><td><a href="#first" role="tab" data-bs-toggle="tab"><img class="img-fluid" src="'+e.target.result+'" alt="" width="50"></a></td><td><input type="file" id="imageinput'+InputCounter+'" accept="image/*" disabled></td><td><a class="idImages btn btn-danger">حذف</a></td></tr>');
                            $('#tbl_Images tbody').append(newRow);
                            var dataTransfer = new DataTransfer(); 
                            dataTransfer.items.add(file); 
                            newRow.find('#imageinput'+InputCounter)[0].files = dataTransfer.files;
                            InputCounter++;
                        };
                    })(file, InputCounter);
                    reader.readAsDataURL(file);
                }
            }
        });

        $("#btn_AddSizes").on('click', function() {
            var Size = $("#Size").val();
            var Inventory = $("#Inventory").val();
            var InventoryPattern = /^\d+$/;
            if (Size == "" || Inventory == ""){
                swal.fire(
                    'هشدار',
                    "لطفا سایز و موجودی را وارد کنید",
                    'warning'
                );
            } else if (!InventoryPattern.test(Inventory)) {
                swal.fire(
                    'هشدار',
                    "موجودی نمیتواند از حروف تشکیل شود",
                    'warning'
                );
            } else {
                $('#tbl_Sizes tbody').append('<tr> <td>' + Size + '</td> <td>' + Inventory + '</td> <td> <a class="idSizes btn btn-danger">حذف</a> </td> </tr>');
                $("#Size").val('');
                $("#Inventory").val('');
            }
        });

        $("#tbl_Sizes").on('click', '.idSizes', function () {
            $(this).closest('tr').remove();
        });
         $("#tbl_Images").on('click', '.idImages', function () {
            $(this).closest('tr').remove();
        });

        $("#btn_EditProduct").on('click', function() {

            var datas = new FormData();
            datas.append("Id", @Model.Id);
            datas.append("Name", $("#Name").val());
            datas.append("Brand", $("#Brand").val());
            datas.append("Price", $("#Price").val());
            datas.append("Displayed", $("#Displayed").is(":checked") ? true : false);
            datas.append("CategoryId", $('#Category').find('option:selected').val());
            datas.append("Description", $("#Description").val());
            datas.append("OffPercentage", $("#Off").val());

            var productimages = $('#tbl_Images tr:gt(0)').map(function () {
                return{
                    src: $(this).find('img').attr('src'),
                };
            }).get();
            $.each(productimages, function (i, val) {
                datas.append('[' + i + '].Src', val.src);
            });

            $('#tbl_Images input[type="file"]').each(function(index, fileInput) {
                if (fileInput.files.length > 0) {
                    var file = fileInput.files[0]; 
                    datas.append('Images-' + index, file); 
                } 
            });
           
            var dataFeaturesViewModel = $('#tbl_Sizes tr:gt(0)').map(function () {
                return {
                    Size: $(this.cells[0]).text(),
                    Inventory: $(this.cells[1]).text(),
                };
            }).get();
            $.each(dataFeaturesViewModel, function (i, val) {
                datas.append('[' + i + '].Size', val.Size);
                datas.append('[' + i + '].Inventory', val.Inventory);
            });
            $.ajax({
                        contentType: false,
                        processData: false,
                        dataType: 'json',
                        type: "PUT",
                        url: "EditProduct",
                        data: datas,
                        success: function (data) {
                            if (data.isSuccess == true) {
                                swal.fire(
                                    'موفق!',
                                    data.message,
                                    'success'
                                ).then(function (isConfirm) {
                                     window.location.href='/admin/product/GetProductDetails/@Model.Id'
                                });
                            }
                            else {
                                swal.fire(
                                    'هشدار!',
                                    data.message,
                                    'warning'
                                );
                            }
                        },
                        error: function (request, status, error) {
                            alert(request.responseText);
                        }
                    });
        });
    </script>
}
@section Modals {
}

